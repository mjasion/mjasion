---
import BaseLayout from '../layouts/BaseLayout.astro';
import { author, skills, skillCategories, experiences, certifications, presentations } from '../data/portfolio';
---

<BaseLayout title="About" description={`${author.name} - ${author.designation}. ${author.summary}`}>
  <div class="mx-auto max-w-5xl px-4 py-12 space-y-12">

    <!-- Hero / Intro -->
    <section class="bento-reveal rounded-3xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 p-8 shadow-sm">
      <div class="flex flex-col items-center gap-6 sm:flex-row sm:items-start">
        <img
          src={author.image}
          alt={author.name}
          width={140}
          height={140}
          class="shrink-0 rounded-full ring-2 ring-gray-200 dark:ring-gray-700"
          loading="eager"
        />
        <div>
          <h1 class="text-3xl font-bold">{author.name}</h1>
          <p class="mt-1 text-lg text-gray-500 dark:text-gray-400">{author.designation}</p>
          <p class="mt-4 text-gray-600 dark:text-gray-300 leading-relaxed">
            {author.summary}
          </p>
          <div class="mt-4 flex flex-wrap items-center gap-3">
            {author.socialLinks.map((link) => (
              <a
                href={link.url}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-1 rounded-full bg-gray-100 dark:bg-gray-800 px-3 py-1.5 text-sm text-gray-600 dark:text-gray-300 hover:bg-gray-200 dark:hover:bg-gray-700 transition-colors"
              >
                {link.name}
              </a>
            ))}
            <a
              href={author.cvUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-1 rounded-full bg-gray-900 dark:bg-white px-3 py-1.5 text-sm font-medium text-white dark:text-gray-900 hover:bg-gray-700 dark:hover:bg-gray-200 transition-colors"
            >
              Download CV
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Skills -->
    <section id="skills" class="bento-reveal">
      <h2 class="mb-6 text-2xl font-bold">Skills</h2>
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {skills.map((skill) => (
          <div class="rounded-2xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 p-5 shadow-sm hover:shadow-md transition-shadow">
            <div class="flex items-center gap-3">
              {skill.logo && (
                <img src={skill.logo} alt={skill.name} class="h-10 w-10" loading="lazy" />
              )}
              <div>
                <h3 class="font-semibold">{skill.name}</h3>
                <div class="flex flex-wrap gap-1 mt-1">
                  {skill.categories.map((cat) => (
                    <span class="rounded-full bg-gray-100 dark:bg-gray-800 px-2 py-0.5 text-xs text-gray-500 dark:text-gray-400">
                      {cat}
                    </span>
                  ))}
                </div>
              </div>
            </div>
            <p class="mt-3 text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
              {skill.summary}
            </p>
          </div>
        ))}
      </div>
    </section>

    <!-- Experience -->
    <section id="experience" class="bento-reveal">
      <h2 class="mb-6 text-2xl font-bold">Experience</h2>
      <div class="space-y-6">
        {experiences.map((exp) => (
          <div class="rounded-2xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 p-6 shadow-sm">
            <div class="flex items-start gap-4">
              {exp.logo && (
                <img src={exp.logo} alt={exp.company} class="h-12 w-12 shrink-0 rounded-lg" loading="lazy" />
              )}
              <div class="min-w-0">
                <h3 class="text-lg font-semibold">
                  <a href={exp.url} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                    {exp.company}
                  </a>
                </h3>
                <p class="text-sm text-gray-500 dark:text-gray-400">{exp.location}</p>
              </div>
            </div>

            <div class="mt-4 space-y-4">
              {exp.positions.map((pos) => (
                <div class="border-l-2 border-gray-200 dark:border-gray-700 pl-4">
                  <div class="flex flex-wrap items-center gap-2">
                    <span class="font-medium">{pos.designation}</span>
                    <span class="text-sm text-gray-500 dark:text-gray-400">
                      {pos.start} â€” {pos.end || 'Present'}
                    </span>
                  </div>
                  <ul class="mt-2 space-y-1 text-sm text-gray-600 dark:text-gray-400">
                    {pos.responsibilities.map((r) => (
                      <li class="flex gap-2">
                        <span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-gray-400 dark:bg-gray-600" />
                        <span>{r}</span>
                      </li>
                    ))}
                  </ul>
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Certifications -->
    <section id="certifications" class="bento-reveal">
      <h2 class="mb-6 text-2xl font-bold">Certifications</h2>
      <div class="grid grid-cols-1 gap-4 sm:grid-cols-2">
        {certifications.map((cert) => (
          <div class="rounded-2xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 p-5 shadow-sm">
            <h3 class="font-semibold">
              <a href={cert.certificateUrl} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                {cert.name}
              </a>
            </h3>
            <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
              {cert.organization} &middot; {cert.timeline}
            </p>
            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">
              {cert.overview}
            </p>
          </div>
        ))}
      </div>
    </section>

    <!-- Presentations -->
    <section id="presentations" class="bento-reveal">
      <h2 class="mb-6 text-2xl font-bold">Presentations</h2>
      <div class="space-y-4">
        {presentations.map((talk) => (
          <div class="rounded-2xl border border-gray-200 dark:border-gray-800 bg-white dark:bg-gray-900 p-5 shadow-sm">
            <div class="flex items-start justify-between gap-4">
              <div>
                <h3 class="font-semibold">{talk.name}</h3>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                  <a href={talk.meetupUrl} target="_blank" rel="noopener noreferrer" class="hover:text-blue-600 dark:hover:text-blue-400 transition-colors">
                    {talk.meetup}
                  </a>
                  &middot; {talk.date}
                </p>
              </div>
              <div class="flex gap-2 shrink-0">
                {talk.assets.map((asset) => (
                  <a
                    href={asset.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center gap-1 rounded-full bg-red-100 dark:bg-red-900/30 px-3 py-1 text-xs font-medium text-red-800 dark:text-red-300 hover:bg-red-200 dark:hover:bg-red-900/50 transition-colors"
                  >
                    <svg class="h-3.5 w-3.5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
                    {asset.title}
                  </a>
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

  </div>
</BaseLayout>

<style>
  .bento-reveal {
    opacity: 0;
    transform: translateY(16px);
    transition: opacity 0.5s cubic-bezier(0.16, 1, 0.3, 1),
                transform 0.5s cubic-bezier(0.16, 1, 0.3, 1);
  }
  .bento-reveal.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
  @media (prefers-reduced-motion: reduce) {
    .bento-reveal {
      opacity: 1;
      transform: none;
      transition: none;
    }
  }
</style>

<script>
  const sections = document.querySelectorAll('.bento-reveal');
  const observer = new IntersectionObserver(
    (entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
          observer.unobserve(entry.target);
        }
      });
    },
    { threshold: 0.1 }
  );
  sections.forEach((s) => observer.observe(s));
</script>
